@model LoginRequestModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>BilgeHotel | Resepsiyonist Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); /* gece tonları */
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            background: #fefefe;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 420px;
        }

            .login-container h2 {
                margin-bottom: 20px;
                font-weight: bold;
                color: #1c1c1c;
                text-align: center;
            }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #c49b2e;
        }

        .forgot-link {
            font-size: 0.9rem;
            text-align: right;
            margin-top: -10px;
            margin-bottom: 15px;
        }

            .forgot-link a {
                color: #c49b2e;
                text-decoration: none;
            }

        .btn-login {
            background-color: #c49b2e;
            color: #fff;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background-color: #a78624;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>BilgeHotel Resepsiyonist Girişi</h2>

        <form asp-area="Reservation" asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="forgot-link text-end mt-2 mb-3">
                <a asp-action="ForgotPassword" asp-controller="Account" asp-area="Reservation">
                    🔐 Şifremi Unuttum
                </a>
            </div>

            <button type="submit" class="btn btn-login">Giriş Yap</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @Html.ValidationSummary(false)
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
