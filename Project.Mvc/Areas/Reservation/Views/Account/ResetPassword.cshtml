@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Yeni Şifre Belirle";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Yeni Şifre Belirle | BilgeHotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            background: #fefefe;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 420px;
        }

            .login-container h4 {
                margin-bottom: 20px;
                font-weight: bold;
                color: #1c1c1c;
                text-align: center;
            }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #c49b2e;
        }

        .btn-submit {
            background-color: #c49b2e;
            color: #fff;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #a78624;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h4 class="text-center fw-bold mb-4">🔐 Yeni Şifre Belirle</h4>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Şifreyi Tekrarla</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-submit">✅ Şifreyi Sıfırla</button>

            <div class="text-center mt-3">
                <a href="/Reservation/Account/Login" class="text-decoration-none">← Giriş Ekranına Dön</a>
            </div>
        </form>
    </div>
</body>
</html>
