@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>BilgeHotel | Yönetici Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/AdminLTE/css/adminlte.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="nav-link">
                        <i class="fas fa-user-shield"></i> Hoş geldin, @User.Identity.Name
                    </span>
                </li>
                <li class="nav-item">
                    <form method="post" asp-area="Admin" asp-controller="Auth" asp-action="Logout">
                        <button class="btn btn-outline-danger btn-sm">Çıkış Yap</button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">BilgeHotel Yönetici</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Panel Ana Sayfa</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Çalışan Yönetimi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="EmployeeShift" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-clock"></i>
                                <p>Vardiya Yönetimi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Room" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-bed"></i>
                                <p>Oda Yönetimi</p>
                            </a>
                        </li>

                        <!-- Rezervasyonlar -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Reservation" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-calendar-check"></i>
                                <p>Rezervasyon Yönetimi</p>
                            </a>
                        </li>


                        <!-- Fiyat ve Kampanyalar -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="RoomTypePrice" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Fiyat Yönetimi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Campaign" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p> Kampanya Yönetimi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="ComplaintLog" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-database"></i>
                                <p>Şikayetler/Geri Bildirimler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Review" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-clock"></i>
                                <p>Yorum Yönetimi</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="CustomerReport" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-check"></i>
                                <p>Müşteri Raporları</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="XmlReport" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file-code"></i>
                                <p>XML Raporlama</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Backup" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-database"></i>
                                <p>Yedekleme</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="SystemInfo" asp-action="Index">
                                <i class="bi bi-info-circle me-2"></i> Sistem Bilgileri
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper p-3">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>BilgeHotel &copy; 2025</strong> | Tüm Hakları Saklıdır.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE/js/adminlte.min.js"></script>


 


    @RenderSection("Scripts", required: false)
</body>
</html>


