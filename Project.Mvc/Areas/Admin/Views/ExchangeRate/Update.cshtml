@model ExchangeRateRequestModel

@{
    ViewData["Title"] = "Kur Güncelle";
}

<div class="container mt-5">
    <h3 class="mb-4 text-center">💱 Kur Bilgisi Güncelle</h3>

    <div class="card shadow-sm border-0 rounded-3 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <form asp-action="Update" asp-controller="ExchangeRate" asp-area="Admin" method="post" asp-route-id="@ViewContext.RouteData.Values["id"]">
                <div class="mb-3">
                    <label asp-for="CurrencyCode" class="form-label">Para Birimi Kodu</label>
                    <input asp-for="CurrencyCode" class="form-control" />
                    <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FromCurrency" class="form-label">Kaynak Para Birimi</label>
                    <select asp-for="FromCurrency" class="form-select" asp-items="Html.GetEnumSelectList<Currency>()">
                        <option value="">Seçiniz</option>
                    </select>
                    <span asp-validation-for="FromCurrency" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ToCurrency" class="form-label">Hedef Para Birimi</label>
                    <select asp-for="ToCurrency" class="form-select" asp-items="Html.GetEnumSelectList<Currency>()">
                        <option value="">Seçiniz</option>
                    </select>
                    <span asp-validation-for="ToCurrency" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rate" class="form-label">Kur Oranı</label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}