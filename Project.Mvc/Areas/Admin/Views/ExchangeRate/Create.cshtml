@model ExchangeRateRequestModel
@{
    ViewData["Title"] = "Yeni Kur Ekle";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h3 class="mb-4">🔄 Yeni Döviz Kuru Ekle</h3>

    <form method="post" asp-action="Create" class="border rounded p-4 shadow-sm bg-light">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="CurrencyCode" class="form-label">💱 Para Birimi Kodu (örn: USD)</label>
                <input asp-for="CurrencyCode" class="form-control" placeholder="Örn: USD" />
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="FromCurrency" class="form-label">📤 Kaynak Döviz</label>
                <select asp-for="FromCurrency" class="form-select">
                    @foreach (var item in Enum.GetValues(typeof(Project.Entities.Enums.Currency)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="FromCurrency" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="ToCurrency" class="form-label">📥 Hedef Döviz</label>
                <select asp-for="ToCurrency" class="form-select">
                    @foreach (var item in Enum.GetValues(typeof(Project.Entities.Enums.Currency)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="ToCurrency" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Rate" class="form-label">💰 Kur Oranı</label>
            <input asp-for="Rate" class="form-control" placeholder="Örn: 32.15" />
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}