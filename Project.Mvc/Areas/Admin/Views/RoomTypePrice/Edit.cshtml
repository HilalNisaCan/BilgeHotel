@model RoomTypePriceResponseModel

@{
    ViewData["Title"] = "Fiyat Güncelle";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Oda Tipi Fiyatını Güncelle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RoomType" /> <!-- Güncellemede gerekiyor -->

        <div class="mb-3">
            <label class="form-label">Oda Tipi</label>
            <input value="@Model.RoomTypeName" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="PricePerNight" class="form-label">Yeni Gecelik Fiyat (₺)</label>
            <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" min="1" />
            <span asp-validation-for="PricePerNight" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Fiyatı Güncelle</button>
    </form>
</div>
