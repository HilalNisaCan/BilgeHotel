@model ResetPasswordRequestModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Şifre Sıfırla | BilgeHotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #4568dc, #b06ab3);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .form-box {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            width: 100%;
            max-width: 400px;
        }

        .form-box h3 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
        }

        .btn-reset {
            background-color: #6c63ff;
            color: white;
            width: 100%;
        }

        .btn-reset:hover {
            background-color: #4c49e2;
        }
    </style>
</head>
<body>
    <div class="form-box">
        <h3>Yeni Şifre Belirle</h3>

        <form asp-area="Admin" asp-controller="Auth" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label>Yeni Şifre</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Yeni Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-reset">Şifreyi Güncelle</button>
        </form>
    </div>
</body>
</html>
