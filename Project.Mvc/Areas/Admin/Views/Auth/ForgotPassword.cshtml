@model ForgotPasswordRequestModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Şifremi Unuttum | BilgeHotel Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .form-box {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            width: 100%;
            max-width: 400px;
        }

        .form-box h3 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
        }

        .btn-reset {
            background-color: #4e54c8;
            color: white;
            width: 100%;
        }

        .btn-reset:hover {
            background-color: #3b3fc1;
        }
    </style>
</head>
<body>
    <div class="form-box">
        <h3>Şifremi Unuttum</h3>

        <form asp-area="Admin" asp-controller="Auth" asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta adresiniz</label>
                <input asp-for="Email" class="form-control" placeholder="örnek@bilgehotel.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-reset">Şifre Sıfırlama Linki Gönder</button>
        </form>
    </div>
</body>
</html>
