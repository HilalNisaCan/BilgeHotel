@model ComplaintReplyRequestModel

@{
    ViewData["Title"] = "Şikayeti Yanıtla";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary fw-bold">
    <i class="bi bi-reply-fill me-2"></i> Şikayeti Yanıtla
</h2>

<div class="card shadow p-4 bg-light rounded-4">
    <form asp-action="Reply" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Response" class="form-label fw-bold">Yanıtınız</label>
            <textarea asp-for="Response" rows="5" class="form-control" placeholder="Şikayete verilecek yanıtı yazınız..."></textarea>
            <span asp-validation-for="Response" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send-check me-1"></i> Yanıtı Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
