@model List<ComplaintLogResponseModel>

@{
    ViewData["Title"] = "Şikayet Kayıtları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary fw-bold">
    <i class="bi bi-chat-left-text me-2"></i> Şikayet Kayıtları
</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-1"></i> Henüz bir şikayet kaydı bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-bordered table-hover shadow-sm rounded-4">
        <thead class="table-dark text-center">
            <tr>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Konu</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Çözüldü mü?</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.SubmittedDate.ToShortDateString()</td>
                    <td>
                        @switch (item.Status)
                        {
                            case ComplaintStatus.Pending:
                                <span class="badge bg-warning text-dark">Bekliyor</span>
                                break;
                            case ComplaintStatus.InProgress:
                                <span class="badge bg-info text-dark">İnceleniyor</span>
                                break;
                            case ComplaintStatus.Responded:
                                <span class="badge bg-success">Cevaplandı</span>
                                break;
                            case ComplaintStatus.Rejected:
                                <span class="badge bg-danger">Reddedildi</span>
                                break;
                        }
                    </td>
                    <td>
                        @(item.IsResolved ? "✔️" : "❌")
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                            <i class="bi bi-eye"></i> Detay
                        </a>
                        <a asp-action="Reply" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-reply-fill"></i> Yanıtla
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
