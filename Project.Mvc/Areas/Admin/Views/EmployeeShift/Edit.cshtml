@model EmployeeShiftUpdateVm

@{
    ViewData["Title"] = "Vardiya Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-warning text-dark py-3 rounded-top-4">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Vardiya Güncelle</h5>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="Id" />


                <div class="col-md-6">
                    <label asp-for="ShiftDate" class="form-label">Tarih</label>
                    <input asp-for="ShiftDate" type="date" class="form-control" />
                    <span asp-validation-for="ShiftDate" class="text-danger small"></span>
                </div>


                <div class="col-md-6">
                    <label asp-for="ShiftStart" class="form-label">Başlangıç Saati</label>
                    <input asp-for="ShiftStart" type="time" class="form-control" />
                    <span asp-validation-for="ShiftStart" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ShiftEnd" class="form-label">Bitiş Saati</label>
                    <input asp-for="ShiftEnd" type="time" class="form-control" />
                    <span asp-validation-for="ShiftEnd" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-check mt-4">
                        <input asp-for="IsDayOff" class="form-check-input" type="checkbox" />
                        <label asp-for="IsDayOff" class="form-check-label">İzin Günü</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-check mt-4">
                        <input asp-for="HasOvertime" class="form-check-input" type="checkbox" />
                        <label asp-for="HasOvertime" class="form-check-label">Fazla Mesai</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="OvertimePay" class="form-label">Mesai Ücreti (₺)</label>
                    <input asp-for="OvertimePay" class="form-control" />
                    <span asp-validation-for="OvertimePay" class="text-danger small"></span>
                </div>

                <div class="col-12 text-end mt-3">
                    <a asp-action="List" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-save me-1"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>