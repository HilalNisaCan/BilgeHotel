@model EmployeeShiftCreateVm

@{
    ViewData["Title"] = "Yeni Vardiya Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white py-3 rounded-top-4" style="background: linear-gradient(90deg, #3f51b5, #6c63ff);">
            <h4 class="mb-0"><i class="fas fa-clock me-2"></i>Yeni Vardiya Oluştur</h4>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Create" method="post" class="row g-3">

                <!-- Vardiya Başlangıç -->
                <div class="col-md-6">
                    <label asp-for="ShiftStart" class="form-label fw-semibold">Vardiya Başlangıç Saati</label>
                    <input asp-for="ShiftStart" class="form-control" type="time" />
                    <span asp-validation-for="ShiftStart" class="text-danger small"></span>
                    <small class="form-text text-muted">Vardiya başlangıç saati giriniz.</small>
                </div>

                <!-- Vardiya Bitiş -->
                <div class="col-md-6">
                    <label asp-for="ShiftEnd" class="form-label fw-semibold">Vardiya Bitiş Saati</label>
                    <input asp-for="ShiftEnd" class="form-control" type="time" />
                    <span asp-validation-for="ShiftEnd" class="text-danger small"></span>
                    <small class="form-text text-muted">Vardiya bitiş saati giriniz.</small>
                </div>

                <!-- Vardiya Seçimi -->
                <div class="col-md-6">
                    <label asp-for="ShiftType" class="form-label fw-semibold">Vardiya Tipi</label>
                    <select asp-for="ShiftType" class="form-select">
                        <option value="Morning">Sabah</option>
                        <option value="Evening">Akşam</option>
                        <option value="Night">Gece</option>
                    </select>
                    <span asp-validation-for="ShiftType" class="text-danger small"></span>
                </div>

                <!-- Vardiya Açıklaması -->
                <<div class="col-md-6">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Vardiya Tarihi -->
                <div class="col-md-6">
                    <label asp-for="ShiftDate" class="form-label fw-semibold">Vardiya Tarihi</label>
                    <input asp-for="ShiftDate" type="date" class="form-control" />
                    <span asp-validation-for="ShiftDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-check mt-4">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold">Aktif Vardiya</label>
                        <span asp-validation-for="IsActive" class="text-danger small d-block mt-1"></span>
                    </div>
                </div>


                <!-- Butonlar -->
                <div class="col-12 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check me-1"></i>Vardiyayı Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}