@model RoomCleaningScheduleCreateRequestModel

@{
    ViewData["Title"] = "Temizlik Personeli Ata";
    var cleaners = (SelectList)ViewBag.Cleaners;
}

<div class="container mt-5">
    <h3 class="mb-4 text-center">Oda @Model.RoomId – Temizlik Personeli Ata</h3>

    <div class="card shadow-sm border-0 rounded-3 mx-auto" style="max-width: 600px;">
        <div class="card-body">

            @* FORM *@
            <form action="/Admin/Rooms/AssignCleaning" method="post">
                <input type="hidden" asp-for="RoomId" />

                <div class="mb-3">
                    <label asp-for="AssignedEmployeeId" class="form-label">Temizlik Personeli</label>
                    <select asp-for="AssignedEmployeeId" class="form-select" asp-items="cleaners" required>
                        <option value="">-- Seçiniz --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="ScheduledDate" class="form-label">Tarih ve Saat</label>
                    <input asp-for="ScheduledDate" class="form-control" type="datetime-local" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-area="Admin" asp-controller="Room" asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-success">Görevlendir</button>
                </div>
            </form>
        </div>
    </div>
</div>
