@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "_Layout";
}

<!-- ============================ HAKKIMIZDA / ABOUT SAYFASI ============================ -->
<section class="about-section py-5 bg-light">
    <div class="container">
        <div class="section-title text-center mb-5 animate__animated animate__fadeInDown">
            <h2 class="fw-bold">BilgeHotel Hakkında</h2>
            <p class="text-muted fs-5">Lüksü ve huzuru bir araya getirdik</p>
        </div>

        <div class="row align-items-center">
            <!-- Görsel -->
            <div class="col-lg-6 mb-4 mb-lg-0 animate__animated animate__zoomIn">
                <div class="img-zoom-container rounded shadow overflow-hidden">
                    <img src="~/img/about/about-us.jpg" alt="Otel Görseli" class="img-fluid zoom-effect" />
                </div>
            </div>

            <!-- Yazı ve Özellikler -->
            <div class="col-lg-6 animate__animated animate__fadeIn">
                <p class="fs-5 text-muted">
                    BilgeHotel, misafirlerine doğayla iç içe, modern ve konforlu bir tatil deneyimi sunar.
                    Denize sıfır konumu, spa merkezi, açık/kapalı havuzları ve profesyonel personeliyle yılın 12 ayı hizmetinizde.
                </p>

                <ul class="list-unstyled fs-5 mt-4">
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> 40'tan fazla konforlu oda</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Spa, fitness ve sauna</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Açık büfe restoran ve barlar</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> 7/24 resepsiyon ve güvenlik</li>
                </ul>

                <a asp-controller="Home" asp-action="Contact" class="btn btn-primary mt-4">İletişime Geç</a>
            </div>
        </div>
    </div>
</section>

<!-- 🎨 Gömülü Stiller ve Animasyonlar -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .img-zoom-container {
        overflow: hidden;
    }

    .zoom-effect {
        transition: transform 0.5s ease;
    }

    .zoom-effect:hover {
        transform: scale(1.08);
    }

    @@media (max-width: 768px) {
        .img-zoom-container {
            margin-bottom: 2rem;
        }

        .zoom-effect {
            width: 100%;
        }
    }
</style>