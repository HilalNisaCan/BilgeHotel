@model ResetPasswordViewModel


@{
    ViewData["Title"] = "Şifreyi Sıfırla";
    Layout = "_Layout";
}

<section class="reset-password-section d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="reset-password-card shadow-lg p-4 rounded mx-auto" style="max-width: 500px;">
            <h3 class="text-center mb-4 text-white fw-bold">
                <i class="bi bi-lock-fill me-2"></i> Şifreyi Sıfırla
            </h3>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info text-center">@TempData["Message"]</div>
            }

            <form asp-action="ResetPassword" method="post">
                <input asp-for="UserId" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" type="password" />
                    <label asp-for="NewPassword"></label>
                    <span class="text-danger small" asp-validation-for="NewPassword"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" type="password" />
                    <label asp-for="ConfirmPassword"></label>
                    <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
                </div>

                <button type="submit" class="btn btn-gradient w-100 mb-3">Şifreyi Güncelle</button>

                <div class="text-center">
                    <a href="/Account/Login" class="text-light text-decoration-none">Hesabınız var mı? Giriş yapın</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        .reset-password-section {
            min-height: 100vh;
            background: linear-gradient(to right top, #5f4d93, #7f7fd5, #91eae4);
            padding: 5rem 1rem;
        }

        .reset-password-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            color: #fff;
        }

        .btn-gradient {
            background: linear-gradient(to right, #8e2de2, #4a00e0);
            color: white;
            font-weight: bold;
            border-radius: 10px;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.85);
        }

        label {
            color: #444;
        }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
}