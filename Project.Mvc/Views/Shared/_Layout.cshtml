@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BilgeHotel Resort</title>

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Diğer CSS Dosyaları -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/elegant-icons.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/nice-select.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <style>
    /* Yarı saydam cam efekti */
    .glass-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    /* Gradient buton stili */
    .btn-gradient {
        background: linear-gradient(135deg, #6f42c1, #a66ddf);
        border: none;
        color: white;
        transition: background 0.3s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #5b35a1, #925ad1);
    }

    /* Etkileyici input stili */
    input.form-control:focus,
    select.form-select:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }

    /* Daha şık label */
    label.form-label {
        font-weight: 600;
        color: #343a40;
    }

    /* Alert kutusunu daha estetik yap */
    .alert-primary {
        background-color: #eef4ff;
        border-color: #cfe2ff;
        color: #003366;
        font-size: 0.92rem;
    }

    /* Kart başlığı */
    .glass-card h2 {
        font-size: 1.75rem;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Responsive padding */
    @@media (max-width: 768px) {
        .glass-card {
            padding: 1.5rem;
        }
    }
</style>

    <!-- 🎨 Giriş/Kayıt Formları için Ekstra Stil -->
    <style>
        form input::placeholder {
            color: #aaa;
        }

        form input, form textarea {
            transition: all 0.2s ease-in-out;
        }

            form input:focus, form textarea:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
            }
    </style>
    <style>
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
            font-weight: 500;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header Başlangıç -->
    <header class="header-section py-3 bg-dark">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="text-white text-decoration-none fw-bold fs-4">
                <img src="~/img/logo.png" alt="BilgeHotel Logo" style="height: 40px; margin-right: 10px;">
                BilgeHotel
            </a>
            <nav class="main-menu">
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Room" asp-action="Index">Odalar</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Contact">İletişim</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> Hesap
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item disabled text-dark">👋 Merhaba,BilgeHotel'e Hoşgeldin</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Profilim</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- Header Bitiş -->
    <!-- İçerik Başlangıç -->
    <main>
        @RenderBody()
    </main>
    <!-- İçerik Bitiş -->
    <!-- Footer Başlangıç -->
    <footer class="footer-section py-4 bg-dark text-white text-center">
        <div class="container">
            <p class="mb-0">&copy; 2025 BilgeHotel. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>
    <!-- Footer Bitiş -->
    <!-- JS Dosyaları -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

